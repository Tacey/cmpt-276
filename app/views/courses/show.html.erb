

<h1>Listing Students for <%=@course.course %></h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Percentage</th>
      <th>Grade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course.enrolls.each do |e| %>
      <tr>
        <td><%@sid = e.student_id%>
            <%@student = Student.find(@sid)%>
            <%=@student.name %></td>
        <td><%= e.percentage%></td>
        <td><%= e.lettergrade%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Edit this course', edit_course_path(@course) %> |
<%= link_to 'Assign grades', controller: "courses", action: "histogram", id: @course %>
